generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  emailVerified Boolean  @default(false)
  name          String?
  avatarUrl     String?
  isActive      Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authProviders AuthProvider[]
  documents     Document[] @relation("OwnedDocuments")
  edits         Editor[]
  workspace     Workspace[]   @relation("OwnerWorkspace")
  workspaceMember WorkspaceMember[]

  @@index([email])
}

model AuthProvider {
  id             String   @id @default(cuid())
  provider       AuthType
  providerUserId String?
  passwordHash   String?

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerUserId])
}

model Document {
  id      String @id @default(cuid())
  title   String
  ownerId String
  content String @db.Text 
  owner User @relation("OwnedDocuments", fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  editors   Editor[]
}

model Editor {
  id         String     @id @default(cuid())
  userId     String
  documentId String
  role       EditorRole
  invitedBy  String?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, userId])
}

model DocumentSnapShot {
  id                      String    @id   @default(cuid())
  documentId              String    
  version                 Int
  content                 String
  createdAt               DateTime   @default(now())
}

model OperationLog {
  id                  String    @id  @default(cuid())
  documentId          String
  version             Int
  op                  String
  createdAt           DateTime  @default(now())

  @@index([documentId, version])
}

model Workspace {
  id                String    @id  @default(cuid())
  name              String
  ownerId           String
  status            WorkspaceStaus @default(ACTIVE)
  mountPath         String
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  owner             User           @relation("OwnerWorkspace", fields: [ownerId], references: [id])
  members           WorkspaceMember[]
  files             File[]
}

model WorkspaceMember {
  id                      String    @id  @default(cuid())
  workspaceId             String
  userId                  String
  role                    WorkspaceRole

  user                    User      @relation(fields: [userId], references: [id])
  workspace               Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([workspaceId, userId])
}

model File {
  id          String    @id @default(cuid())
  workspaceId String
  path        String
  version     Int       @default(0)
  currentHash String

  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  fileSnapshot  FileSnapshot[]
  fileOpLogs    FileOplogs[]

  @@unique([workspaceId, path])
}

model FileSnapshot {
  id              String  @id @default(cuid())
  fileId          String
  version         Int
  hash            String
  content         String
  createdAt       DateTime    @default(now())

  file            File        @relation(fields: [fileId], references: [id])

  @@index([fileId, version])
}

model FileOplogs {
  id                String    @id  @default(cuid())
  fileId            String
  serverSeq         Int
  op                Json
  createdAt         DateTime       @default(now())

  file              File           @relation(fields: [fileId], references: [id])

  @@unique([fileId, serverSeq])
}

enum EditorRole {
  OWNER
  EDITOR
  VIEWER
}

enum AuthType {
  EMAIL
  GOOGLE
  GITHUB
}

enum WorkspaceStaus {
  ACTIVE
  STOPPED
  DELETED
}

enum WorkspaceRole {
  OWNER
  EDITOR
  VIEWER
}
